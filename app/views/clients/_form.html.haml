= form_for @client, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :ip, :class => 'control-label'
    .controls
      = f.text_field :ip, :class => 'text_field'
  .control-group
    = f.label :mac, :class => 'control-label'
    .controls
      = f.text_field :mac, :class => 'text_field'
  .control-group
    = f.label :comment, :class => 'control-label'
    .controls
      = f.text_area :comment, :class => 'text_area'
  .control-group
    = f.label :heartbeated_at, :class => 'control-label'
    .controls
      = f.datetime_select :heartbeated_at, :class => 'datetime_select'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), clients_path, :class => 'btn'
