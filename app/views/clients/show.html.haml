- model_class = @client.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @client.name
%p
  %strong= model_class.human_attribute_name(:ip) + ':'
  %br
  = @client.ip
%p
  %strong= model_class.human_attribute_name(:hostid) + ':'
  %br
  = @client.hostid
%p
  %strong= model_class.human_attribute_name(:comment) + ':'
  %br
  = @client.comment
%p
  %strong= "last heartbeated:"
  %br
  = @client.heartbeated_at.strftime('%d.%m.%Y %H:%M') 
%p
  %strong= model_class.human_attribute_name(:created_at) + ':'
  %br
  = @client.created_at.strftime('%d.%m.%Y %H:%M') 
  
%h3= "ssh -p #{@client.port || 22} #{@client.user}@#{@client.ip}"
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), clients_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_client_path(@client), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), client_path(@client), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
