- model_class = Client.new.class
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:ip)
      %th= model_class.human_attribute_name(:mac)
      %th= model_class.human_attribute_name(:comment)
      %th= model_class.human_attribute_name(:heartbeated_at)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @clients.each do |client|
      %tr
        %td= link_to client.id, client_path(client)
        %td= client.name
        %td= client.ip
        %td= client.mac
        %td= client.comment
        %td= client.heartbeated_at
        %td=l client.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_client_path(client), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), client_path(client), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_client_path, :class => 'btn btn-primary'
